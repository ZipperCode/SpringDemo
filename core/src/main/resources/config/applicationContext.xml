<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--普通类-->
    <bean id="demo" class="com.spring.core.demo.entity.Demo"/>
    <!--内部类-->
    <bean id="innerDemo" class="com.spring.core.demo.entity.Demo$InnerDemo"/>
    <!-- 单例注入 -->
    <bean id="singletonDemo1"
          class="com.spring.core.demo.entity.SingletonDemo"
          factory-method="getInstance"/>
    <!-- 单例带有参构造 使用懒加载（此例子已经是懒汉式）-->
    <bean id="singletonDemo2"
          lazy-init="true"
          class="com.spring.core.demo.entity.SingletonDemo" factory-method="getInstance">
        <constructor-arg ref="demo"/>
    </bean>

    <bean id="mapping" class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="properties">
            <value>
                spring.demo.param2=param2
            </value>
        </property>
        <property name="location" value="classpath:config/config.properties"/>
    </bean>

    <bean id="demoP" class="com.spring.core.demo.entity.Demo"
          p:param1="${spring.demo.param1}"
          p:param2="${spring.demo.param2}"
    />
</beans>